<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <xdroid.mwee.com.mwcommon.xrecyclerview.XRecyclerView
        android:id="@+id/mMenuClsLsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1px"
        android:scrollbars="none" />

    <xdroid.mwee.com.mwcommon.xrecyclerview.XRecyclerView
        android:id="@+id/menuContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:recyclerBackgroundColor="#f5f5f5"
        app:recyclerScrollbarNone="true"
        app:recyclerScrollbarStyle="outsideOverlay"
        app:x_emptyLayoutId="@layout/view_empty" />

</LinearLayout>