<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/mAnimatorBtn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:background="@color/colorAccent"
        android:text="动画测试"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/mTimerBtn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:background="@color/colorAccent"
        android:text="倒计时"
        android:enabled="false"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/mTimerImg"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:enabled="false"
        android:layout_below="@+id/mTimerBtn"
        android:src="@drawable/ic_menu_send"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent" />



    <TextView
        android:id="@+id/mAnimatorViewTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary"
        android:padding="25sp"
        android:text="Propery   Animator"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/mAnimatorViewTv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent"
        android:padding="25sp"
        android:text="Propery   Animator"
        android:textColor="@color/white" />


    <ImageView
        android:id="@+id/mAnimatorViewImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:visibility="gone"
        android:src="@mipmap/ic_launcher" />

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_below="@+id/mAnimatorViewTv"
        android:layout_height="match_parent"/>


</RelativeLayout>