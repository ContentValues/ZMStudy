<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/type22_item_one_img"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="80dp"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/type22_item_one_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_font"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/type22_item_one_sub_title"
            android:layout_below="@+id/type22_item_one_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_font"
            />

        <TextView
            android:id="@+id/type22_item_one_recommendedLanguage"
            android:layout_below="@+id/type22_item_one_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"/>

    </RelativeLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/lineColor"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/type22_item_two_img"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="80dp"
            android:layout_height="100dp"
            />
        <TextView
            android:id="@+id/type22_item_two_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_font"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/type22_item_two_sub_title"
            android:layout_below="@+id/type22_item_two_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_font"
            />

        <TextView
            android:id="@+id/type22_item_two_recommendedLanguage"
            android:layout_below="@+id/type22_item_two_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"/>
    </RelativeLayout>


</LinearLayout>